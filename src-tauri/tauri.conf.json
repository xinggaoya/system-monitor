{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "system monitor",
  "version": "1.1.0",
  "identifier": "cn.moncn.monitor",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:9000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "",
        "width": 600,
        "height": 20,
        "resizable": false,
        "transparent": true,
        "alwaysOnTop": true,
        "decorations": false,
        "shadow": false,
        "skipTaskbar": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
